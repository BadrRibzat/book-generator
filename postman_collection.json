{
  "info": {
    "name": "Book Generator SaaS API",
    "description": "Complete REST API for Book Generator SaaS - Generate publish-ready books with AI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "book_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "cover_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"testpass123\",\n  \"password2\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", ""]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            },
            "description": "Login with username and password"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/me/",
              "host": ["{{base_url}}"],
              "path": ["auth", "me", ""]
            },
            "description": "Get authenticated user information"
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/auth/logout/",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout", ""]
            },
            "description": "Logout current user"
          }
        }
      ]
    },
    {
      "name": "Configuration",
      "item": [
        {
          "name": "Get Sub-Niches",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/config/sub-niches/",
              "host": ["{{base_url}}"],
              "path": ["config", "sub-niches", ""]
            },
            "description": "Get available domains, sub-niches, and page lengths"
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"health\",\n  \"sub_niche\": \"yoga_beginners\",\n  \"page_length\": 15\n}"
            },
            "url": {
              "raw": "{{base_url}}/books/",
              "host": ["{{base_url}}"],
              "path": ["books", ""]
            },
            "description": "Create a new book and trigger content generation"
          }
        },
        {
          "name": "List Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/",
              "host": ["{{base_url}}"],
              "path": ["books", ""]
            },
            "description": "Get all books for authenticated user"
          }
        },
        {
          "name": "Get Book Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", ""]
            },
            "description": "Get detailed information about a specific book"
          }
        },
        {
          "name": "Select Cover",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cover_id\": {{cover_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/select_cover/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "select_cover", ""]
            },
            "description": "Select one of the three generated covers (required before download)"
          }
        },
        {
          "name": "Download Book",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/download/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "download", ""]
            },
            "description": "Download the final PDF (cover + interior)"
          }
        },
        {
          "name": "Regenerate Covers",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/regenerate_covers/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "regenerate_covers", ""]
            },
            "description": "Generate 3 new cover options"
          }
        },
        {
          "name": "Regenerate Content",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/regenerate_content/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", "regenerate_content", ""]
            },
            "description": "Regenerate book content (keeps same configuration)"
          }
        },
        {
          "name": "Get Book History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/history/",
              "host": ["{{base_url}}"],
              "path": ["books", "history", ""]
            },
            "description": "Get all books for authenticated user"
          }
        },
        {
          "name": "Clear History",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/books/history/",
              "host": ["{{base_url}}"],
              "path": ["books", "history", ""]
            },
            "description": "Delete all books for authenticated user"
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/books/{{book_id}}/",
              "host": ["{{base_url}}"],
              "path": ["books", "{{book_id}}", ""]
            },
            "description": "Delete a specific book"
          }
        }
      ]
    }
  ]
}
